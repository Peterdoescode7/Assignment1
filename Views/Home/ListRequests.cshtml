@model IEnumerable<EquipmentRequest.Models.UserRequest>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Requests</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="text-center p-2">
        <h2 class="text-center">
            Here is the list of requests
        </h2>
        <table class="table table-bordered table-striped table-sm">
            <thead>
                <tr><th>ID</th><th>Name</th><th>Email</th><th>Phone</th><th>Role</th><th>Equipment Type</th><th>Request Details</th><th>Duration(number of days)</th></tr>
            </thead>
            <tbody>
                @foreach (EquipmentRequest.Models.UserRequest r in Model!) {
                    <tr>
                        <td>@r.ID</td>
                        <td>@r.Name</td>
                        <td>@r.Email</td>
                        <td>@r.Phone</td>
                        <td>@r.Role</td>
                        <td>@r.EquipmentType</td>
                        <td>@r.RequestDetails</td>
                        <td>@r.Duration</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>